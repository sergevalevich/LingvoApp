<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dictionary_item_height">


    <ImageView
        android:id="@+id/play_button"
        android:src = "@drawable/sound_dictionary"
        android:layout_width="@dimen/play_button_size"
        android:layout_height="@dimen/play_button_size"
        android:layout_marginStart="@dimen/dictionary_arrow_end_margin"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dictionary_arrow_end_margin"
        android:layout_marginEnd="@dimen/dictionary_arrow_end_margin"
        android:layout_marginRight="@dimen/dictionary_arrow_end_margin"/>

    <ImageView
        android:id="@+id/word_picture"
        android:layout_width="@dimen/dictionary_item_height"
        android:layout_height="@dimen/dictionary_item_height"
        android:layout_toRightOf="@+id/play_button"
        android:layout_toEndOf="@+id/play_button"
        android:src = "@drawable/ability"/>


    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/word_picture"
        android:layout_marginStart="@dimen/dictionary_arrow_end_margin"
        android:layout_marginLeft="@dimen/dictionary_arrow_end_margin"
        android:layout_toEndOf="@+id/word_picture"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textSize="@dimen/primary_textSize"
        android:singleLine="true"
        android:text = "@string/stub_dictionary_text"/>


    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:src = "@drawable/arrow_dictionary"
        android:layout_marginEnd="@dimen/dictionary_arrow_end_margin"
        android:layout_marginRight="@dimen/dictionary_arrow_end_margin"/>


</RelativeLayout>