<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/fon_leves1"
              android:orientation="vertical"
              android:paddingEnd="@dimen/word_details_side_padding"
              android:paddingStart="@dimen/word_details_side_padding"
              android:paddingTop="@dimen/word_details_top_padding">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/word_details_bottom_margin"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:src="@drawable/kitti"/>

    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/bg_round"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/word_details_arrow_side_padding"
        android:paddingStart="@dimen/word_details_arrow_side_padding">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/details_arrow_height"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/arrow_right"/>

        <LinearLayout
            android:id="@+id/word_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/original"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/primary_textSize_large"
                tools:text="кот"/>


            <TextView
                android:id="@+id/translate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/primary_textSize_large"
                tools:text="CAT"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/details_arrow_height"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:src="@drawable/arrow_left"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/sound"
            android:layout_width="@dimen/word_details_action_button_size"
            android:layout_height="@dimen/word_details_action_button_size"
            android:layout_weight="1"
            android:src="@drawable/sound_kitty"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="@dimen/word_details_action_button_size"
            android:layout_height="@dimen/word_details_action_button_size"
            android:layout_weight="1"
            android:src="@drawable/star_kitty_"/>

        <ImageView
            android:id="@+id/dictionary"
            android:layout_width="@dimen/word_details_action_button_size"
            android:layout_height="@dimen/word_details_action_button_size"
            android:layout_weight="1"
            android:src="@drawable/book_kitty_"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/word_details_action_button_size"
            android:layout_height="@dimen/word_details_action_button_size"
            android:layout_weight="1"
            android:src="@drawable/share_kitty"/>

    </LinearLayout>

</LinearLayout>